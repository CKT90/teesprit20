<% provide(:title, 'Sign up') %>
	<div class="signup">


	<div>
	<div><%= image_tag("signup.png", alt: "tee tees tea", class: 'image_signup') %></div>
	<h1>Join Us Today</h1>
		<div class="row">
			
			<%= render "shared/error_messages", :target => @user %>

				<%= form_for @user, url: signup_path do |f| %> 

					<%= f.text_field :name, placeholder: "Name", class: 'form-control' %>

					<%= f.email_field :email, placeholder: "Email", class: 'form-control' %>

					<%= f.password_field :password, placeholder: "Password", class: 'form-control' %>

					<%= f.password_field :password_confirmation,  placeholder: "Password Confirmation", class: 'form-control' %>

					<%= f.submit "Sign Up", class: "btn btn-primary signup_button" %>
				<% end %>
				<p>Existing user? <span style="font-weight: bold;"><%= link_to "Log in now!", login_path %></span></p>
			

			<p style="border-top: 1px solid #000; padding-top: 15px;"> Sign Up with us for these accesses: </p>
			
			<p class="benefits"> <i class="fa fa-tasks" aria-hidden="true"></i> </i>  Order tracking and history </p>
			<p class="benefits"> <i class="fa fa-newspaper-o" aria-hidden="true"></i>  Monthly newsletter </p>
			
			<p> Alternatively you may purchase<span style="font-weight: bold; color:#0bd4ff"> without signing up!</span> </p>
		</div>
	</div>
</div>
