
<h1>Messages</h1>

<table class="table message_table">
  <thead class="thead-inverse">
    <tr>
      <th style="width:20%; text-decoration: underline;"><%= sort_link @search, :created_at, "Date" %></th>
      <th style="width:20%;">From</th>
      <th style="width:20%;">Subject</th>
      <th style="width:30%;">Content</th>
      <th style="width:10%;">Action</th>
    </tr>
  </thead>

  <tbody>

    <% @messages.each do |message| %>
      <tr>
        <td><%= message.created_at.strftime('%a, %d %b %Y %H:%M:%S') %></td>
        <td> 
          <% if message.user_id == "0" %>
            <%= message.sender_email %><span class="guest_m">Guest</span>
          <% else %>
            <%= link_to message.sender_email, edit_admin_user_path(message.user_id) %>
          <% end %>
        </td>
        <td><%= message.subject %></td>
        <td><%= message.content %></td>
        <td></td>
      </tr>
      <%end%>
  </tbody>
</table>
<br>



