<!-- testing VueJS framework -->

<div style="background-color: #edda82; padding: 15px;">

<% if current_user && current_user.admin? %>
<div id='content' v-cloak>
  <p> {{ title }} </p>
  <p> {{ subtitle('Teesprit') }} </p>
  <p> Watch some videos here in our <a :href="url">Youtube</a> channel. </p> <!-- ":href" short for "v-bind:href" -->
  <input type="text" :value="area" @keyup="updateArea"> 
  <input type="text" v-model="postcode">
  <p> {{ quantity}} (with v-model two way data binding) </p>
  <button v-on:click="quantity++">add quantity</button>
  <button v-on:click="quantity--">reduce quantity</button>

  <p> {{ count }} </p>
  <button v-on:click="changeCount(1)">add count by 1 (single click)</button>
  <button v-on:click="changeCount(-1)">reduce count by 1 (single click)</button>
  <button @dblclick="changeCount(2)">add count by 2 (double click)</button>
  <button @dblclick="changeCount(-2)">reduce count by 2 (double click)</button> <!-- "@" is short for "v:on" -->

  <div class="canvas" style="width: 200px; height: 200px; margin-top: 20px; background-color: #ddd;" @click="logEvent" @mousemove="logCoords">{{coords.x}}, {{coords.y}}</div>

  <p v-if="betul"> I am correct </p>
  <p v-if="salah"> I am wrong, sorry. </p>

<keep-alive>
  <div id="componentA"></div>
</keep-alive>

  <ul>
    <li v-for="(item, index) in items"> {{index+1}}. {{item}} </li>
  </ul>

</div>

<% else %>

<% end %>

