<% provide(:title, 'Log in') %>

	<div class="login container">
	
	<div class="col-lg-5 col-md-12">
		<div class="login_here">
			<h1>Log In</h1>
				<br>
				<div class="row">	
					<%= form_for(:session, url: login_path) do |f| %>

						<%= f.email_field :email,  placeholder: "Email", class: 'form-control' %>
						
						<%= f.password_field :password,  placeholder: "Password", class: 'form-control' %>
						<span style="color: #1e98b2; font-weight: bold;"><%= link_to "(forgot password)", new_password_reset_path %></span>
						<br>
						<br>

						<%= f.label :remember_me, class: "checkbox inline" do %>
						<%= f.check_box :remember_me %> <!-- checkbox result is 1 or 0 -->
						<span>Remember me on this device</span>
						<% end %>

						<%= f.submit "log in", class: "signin_button btn btn-primary" %>

					<% end %>	

					<p>New user? <span style="color: #1e98b2; font-weight: bold;"><%= link_to "Sign up now!", signup_path %></span><br>
					Did not receive validation email? <span style="color: #1e98b2; font-weight: bold;"><%= link_to "Click here!", resend_validation_path %></span></p>
				</div>
			</div>
		</div>

		<div class="col-lg-7 col-md-12">
			<%= image_tag("baby.png", alt: "tee tees tea", class: 'image_login') %>
		</div>
	</div>

<style>
	.footer {
		visibility: hidden;
	}
</style>